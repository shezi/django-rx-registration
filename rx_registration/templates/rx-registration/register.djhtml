{% extends "rx-registration/base.djhtml" %}
{% load i18n %}

{% block content %}
<h2>{% trans "Register now" %}!</h2>

<form method="POST" action=".">{% csrf_token %}
  {{ form.as_p }}

  <input type="submit" value="{% trans "Register now" %}" />
</form>

{% url 'rx_registration:login' as login_url %}
{% blocktrans %}
Already have an account? Then <a href="{{ login_url }}">log in now</a>!
{% endblocktrans %}


{% endblock content %}